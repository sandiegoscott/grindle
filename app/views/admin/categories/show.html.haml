- title "Category"

%p
  %strong Name:
  =h @category.name
%p
  %strong Abbrev:
  =h @category.abbrev
%p
  %strong Ctype:
  =h @category.ctype

%p
  = link_to "Edit", edit_category_path(@category)
  |
  = link_to "Destroy", @category, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", categories_path
