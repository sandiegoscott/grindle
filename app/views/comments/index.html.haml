- title "Comments"

%table.datatable{:cellpadding => 0, :cellspacing => 0}
  %thead
    %tr
      %th Inspection form
      %th Creator
      %th Info
  %tbody
    - for comment in @comments
      %tr{:class => cycle('odd', 'even')}
        %td= h comment.inspection_form_id
        %td= h comment.creator_id
        %td= h comment.info
        %td
          = link_to 'Show', comment
          = link_to 'Edit', edit_comment_path(comment)
          = link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Comment", new_comment_path
